#!/usr/bin/env zsh

# the scripting-addition must be loaded manually if
# you are running yabai on macOS Big Sur. Uncomment
# the following line to have the injection performed
# when the config is executed during startup.
#
# for this to work you must configure sudo such that
# it will be able to run the command without password
#
# https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#macos-big-sur---automatically-load-scripting-addition-on-startup

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"


# Default space settings
yabai -m config external_bar all:23:23
yabai -m config layout bsp
yabai-set-padding 6

# Mouse behavior
yabai -m config mouse_follows_focus off
# `autoraise` will override the effect of `window_topmost`
yabai -m config focus_follows_mouse autofocus
yabai -m config mouse_modifier fn
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

# Default window layout
yabai -m config window_placement second_child
# Display floating windows on top.
yabai -m config window_topmost on
yabai -m config split_ratio 0.6180339887
yabai -m config auto_balance on

# Window opacity
yabai -m config window_opacity on
yabai -m config window_shadow on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.90
# yabai -m config normal_window_opacity 1.0

# Window borders
yabai -m config window_border on
yabai -m config window_border_width 6
# @TODO use theme colors
yabai -m config active_window_border_color 0x00775759
yabai -m config normal_window_border_color 0x00505050
yabai -m config insert_window_border_color 0xffd75f5f


yabai -m space 1 --label 'task'
yabai -m space 2 --label 'inspect' && yabai -m space 2
yabai -m space 3 --label 'code' && yabai -m space 3
yabai -m space 4 --label 'comm' && yabai -m space 4
yabai -m space 5 --label 'term' && yabai -m space 5

# Float Emacs popups
# yabai -m rule --add app='^Emacs$' title='^\s*(-|–|—){1}\s+\(' \
# 	manage=off \
# 	mouse_follows_focus=off
# yabai -m rule --add app='^Emacs$' title='^$' \
# 	manage=off \
# 	mouse_follows_focus=off

# @todo what happened?
# yabai -m rule --add title="^$" manage=off

yabai -m rule --add app=1Password manage=off
yabai -m rule --add app="Fantastical Helper" manage=off
yabai -m rule --add app=Stickies manage=off
yabai -m rule --add app='^System Preferences$' manage=off

yabai -m rule --add app=Browserosaurus manage=off sticky=on
yabai -m rule --add app=Harvest \
  manage=off \
  sticky=on

# caused yabai to crash?
# yabai -m rule --add app=PhpStorm title='^$' manage=off

# @TODO add timestamp
echo "yabai configuration loaded.."
