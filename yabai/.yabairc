#!/usr/bin/env sh

# global settings
yabai -m config mouse_follows_focus on
yabai -m config focus_follows_mouse autofocus
yabai -m config window_placement second_child
yabai -m config window_topmost on
yabai -m config window_opacity on
yabai -m config window_shadow on
yabai -m config window_border on
yabai -m config window_border_width 6
yabai -m config active_window_border_color 0x00775759
yabai -m config normal_window_border_color 0x00505050
yabai -m config insert_window_border_color 0xffd75f5f
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.90
yabai -m config split_ratio 0.50
yabai -m config auto_balance on
yabai -m config mouse_modifier fn
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

# general space settings
yabai -m config external_bar all:23:23
yabai -m config layout bsp
yabai -m config top_padding 6
yabai -m config bottom_padding 6
yabai -m config left_padding 6
yabai -m config right_padding 6
yabai -m config window_gap 6

yabai -m space 1 --label 'task'
yabai -m space 2 --label 'inspect' && yabai -m space 2
yabai -m space 3 --label 'code' && yabai -m space 3
yabai -m space 4 --label 'comm' && yabai -m space 4
yabai -m space 5 --label 'term' && yabai -m space 5
# yabai -m space 6 --label 'sys' && yabai -m space 6
# yabai -m space 7 --label 'dots' && yabai -m space 7
# yabai -m space 8 --label 'self' && yabai -m space 8
# yabai -m space 9 --label 'music' && yabai -m space 9

# Float Emacs popups
yabai -m rule --add app='^Emacs$' title='^\s*(-|–|—){1}\s+\(' \
	manage=off \
	mouse_follows_focus=off
yabai -m rule --add app='^Emacs$' title='^$' \
	manage=off \
	mouse_follows_focus=off

# @todo what happened?
# yabai -m rule --add title="^$" manage=off

yabai -m rule --add app=1Password manage=off
yabai -m rule --add app=Browserosaurus manage=off
yabai -m rule --add app=Fantastical manage=off title='^$'
yabai -m rule --add app=Fantastical title!='^$' space='comm'
# let firefox exist wherever so multiple windows can exist?
# yabai -m rule --add app=Firefox space='self'
yabai -m rule --add app=Harvest manage=off
# PhpStorm doesn't seem to get along with yabai?
# yabai -m rule --add app=PhpStorm space='code'
# caused yabai to crash?
# yabai -m rule --add app=PhpStorm title='^$' manage=off
yabai -m rule --add app=Slack space='comm'
yabai -m rule --add app=Spark space='comm'
yabai -m rule --add app=Stickies manage=off
yabai -m rule --add app=Spotify space='music'
yabai -m rule --add app='^System Preferences$' manage=off
yabai -m rule --add app=Zoom space='task'

echo "yabai configuration loaded.."
