#!/usr/bin/env zsh
set -euo pipefail

emulate -L zsh
setopt extended_glob warn_create_global typeset_silent \
        no_short_loops rc_quotes no_auto_pushd

PLATFORM_WINDOW_ID="$1"

kitty @ --to $KITTY_SOCKET ls \
  | jq -r --argjson id "$PLATFORM_WINDOW_ID" \
    '.[] | select(.platform_window_id==$id)'
